{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["json"],
  "extends": ["airbnb-base", "plugin:jest/recommended", "eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    "import/no-dynamic-require": 0,
    "global-require": 0,
    "no-param-reassign": 0,
    "no-console": [
      "error",
      {
        "allow": ["warn", "info"]
      }
    ]
  }
}
